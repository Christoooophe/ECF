@model IEnumerable<ECF.Models.Participant>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" data-test="createParticipant">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                Evenement
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody data-test="participantsArray">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenements.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" data-test="editButtonParticipant">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" data-test="detailsButtonParticipant">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" data-test="deleteButtonParticipant">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
